@model List<ApartmentManagement.Application.Features.Users.Models.UserListModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/ManagerLayout.cshtml";
}

@if (Model.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Herhangi bir kayıt bulunamadı.</h3>
            </div>
        </div>
    </div>
}
else
{
    <table class="table table-bordered table table-striped">
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Tc No</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.TcNo</td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserId">Sil</a></td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.UserId">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
}

<a class="btn btn-primary" asp-action="Create">Ekle</a>

